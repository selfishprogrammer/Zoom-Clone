<body style="background-color: grey;">
    <h1 class="text-center" style="padding-top: 45px;color: white;">LOOM VIDEO CHATT</h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card bg-dark">
                    <div class="d-flex justify-content-center">

                        <div id="video-grid" class="pt-5 pb-5" style="display: flex; justify-content: center; ">





                        </div>


                    </div>
                    <div class="card-header bg-secondary">
                        <div class="row">
                            <div style="margin-left: 20px;;" id="unmute_mute"><i class="fas fa-microphone" style="font-size: 20px;;" aria-hidden="true"></i>
                            </div>
                            <div style="margin-left: 46px;;"><i class="fa fa-video-camera" style="font-size: 20px;" aria-hidden="true"></i>
                            </div>


                            <div class="d-flex justify-content-center" style="margin-left: 260px;">
                                <div style="margin-left: 27px;;"><i class="fa fa-shield" style="font-size: 20px;" aria-hidden="true"></i>
                                </div>

                                <div style="margin-left: 67px;;"><i class="fa fa-users" style="font-size: 20px;" aria-hidden="true"></i>
                                </div>
                                <div id="chat" style="margin-left: 46px;;"><i class="fa fa-comment-o" style="font-size: 20px;" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-danger form-control" style="width:12rem; margin-left: 220px;">Leave Meeting</button>
                            </div>
                        </div>

                        <div class="row">
                            <div style="margin-left: 8px;;" id="mute"><b>Mute</b>
                            </div>
                            <div style="margin-left: 8px;;"><b>Stop Video</b>
                            </div>


                            <div class="d-flex justify-content-center" style="margin-left: 219px;">
                                <div style="margin-left: 8px;;"><b>Security</b>
                                </div>

                                <div style="margin-left: 8px;;"><b>Participants</b>
                                </div>
                                <div style="margin-left: 8px;;"><b>Chat</b>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>

            </div>


            <div class="col-md-4">

                <div class="card">
                    <div class="card-header text-center bg-dark" id="chat" style="color: white; font-size: 20px; font-family: cursive;"><b>Chat</b></div>

                    <div class="card-body " id="body_chat" style="height:500px; display: none; overflow-y: auto;">
                        <div class="sticky-top">

                            <div class="form-group">
                                <input type="text" name="msg" class="form-control" placeholder="Type Your Message........." style="width: 100%;" id="">
                            </div>

                        </div>
                        <hr>
                        <div class="my-1" id="message">

                        </div>

                    </div>
                    <div class="card-footer bg-dark">


                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="http://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>
        $('#chat').click(() => {
            $('#body_chat').slideToggle("slow")
        });

        $('#unmute_mute').click(() => {

            const enabled = myVideoStrem.getAudioTracks()[0].enabled;
            if (enabled) {
                myVideoStrem.getAudioTracks()[0].enabled = false;
                setUnmuteButton();


            } else {
                setMuteButton();
                myVideoStrem.getAudioTracks()[0].enabled = true;


            }
        })

        const setMuteButton = () => {
            const html = `<i class="fas fa-microphone" style="font-size: 20px;;" aria-hidden="true"></i>`;
            document.querySelector('#unmute_mute').innerHTML = html
            document.querySelector('#mute').innerText = 'Mute';
        }

        const setUnmuteButton = () => {
            const html = `<i class="fas fa-microphone" style="font-size: 20px;;" aria-hidden="true"></i>`;
            document.querySelector('#unmute_mute').innerHTML = html
            document.querySelector('#mute').innerText = 'UnMute';
        }
    </script>

